{
    "name": "python-import-sorter",
    "publisher": "antimach",
    "displayName": "Python Import Sorter",
    "description": "Automatically sort python imports",
    "version": "0.0.1",
    "repository": {
        "url": "https://github.com/AntiMach/python-import-sorter"
    },
    "engines": {
        "vscode": "^1.98.0"
    },
    "categories": [
        "Formatters"
    ],
    "activationEvents": [
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "title": "Common",
            "properties": {
                "python-import-sorter.formatter": {
                    "description": "Specify the formatter command to run in python.",
                    "type": "string",
                    "default": "ruff format"
                },
                "python-import-sorter.groups": {
                    "description": "Package names to group by.",
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "python bundle.py && tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src",
        "test": "vscode-test"
    },
    "devDependencies": {
        "@types/mocha": "^10.0.10",
        "@types/node": "20.x",
        "@types/vscode": "^1.98.0",
        "@typescript-eslint/eslint-plugin": "^8.28.0",
        "@typescript-eslint/parser": "^8.28.0",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "@vscode/vsce": "^3.3.2",
        "eslint": "^9.23.0",
        "typescript": "^5.8.2"
    }
}